@model IEnumerable<first_asp_app.Models.Product>

@{
    ViewData["Title"] = "商品一覧";
}

<h1>商品一覧</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">価格: ¥@item.Price.ToString("N0")</p>
                    <p class="card-text">在庫: @item.StockQuantity 個</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">詳細</a>
                </div>
            </div>
        </div>
    }
</div>
